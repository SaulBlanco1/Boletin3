<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivity_TablasPuntuacion">

  <TextView
      android:id="@+id/textView_TablasPuntuacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Tablas de puntuaciÃ³n"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.05" />

  <TableLayout
      android:id="@+id/tableLayout_TablaPuntuacionesHistoricas"
      android:layout_width="match_parent"
      android:layout_height="330dp"
      app:layout_constraintBottom_toTopOf="@+id/tableLayout_TablaPuntuacionMediaJugador"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView_TablasPuntuacion"
      app:layout_constraintVertical_bias="0.81">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </TableLayout>

  <TableLayout
      android:id="@+id/tableLayout_TablaPuntuacionMediaJugador"
      android:layout_width="match_parent"
      android:layout_height="330dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tableLayout_TablaPuntuacionesHistoricas">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>